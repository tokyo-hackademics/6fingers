<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.fingers.six.elarm.Settings">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/settings_time_mode"
        android:layout_margin="@dimen/abc_action_bar_subtitle_top_margin_material"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/setting_time_mode_title"
            android:id="@+id/textView" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/radioButton"
            android:checked="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_unlock_alarm"
        android:layout_margin="@dimen/abc_action_bar_subtitle_top_margin_material"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"></LinearLayout>
</FrameLayout>
